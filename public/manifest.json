{
  "manifest_version": 3,

  "name": "ShareShot",
  "description": "Easily share your full page screenshots or any part of it",
  "version": "0.0.1",
  "action": {

  },
  "background": {
    "service_worker": "./background.js"
  },
  "icons": {
    "16": "ShareShot-16.png",
    "48": "ShareShot-48.png",
    "128": "ShareShot-128.png"
  },
  "commands": {
    "capture": {
      "suggested_key": "Alt+Shift+Z",
      "description": "Opens ShareShot page to customize and share screenshot"
    }
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://api.imgur.com/3/upload"
  ]
}
